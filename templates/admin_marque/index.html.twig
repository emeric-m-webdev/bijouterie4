{% extends 'base.html.twig' %}

{% block title %}Gestion des marques{% endblock %}

{% block h1 %}Gestion des marques{% endblock %}

{% block body %}

    {% for notification in app.flashes('success') %}
        <div class="col-md-6 mx-auto text-center alert alert-success">
            {{ notification }}
        </div>
    {% endfor %}


    <a class="btn btn-success" href="{{ path('app_admin_marque_new') }}">Ajouter</a> 

    <table class="table table-striped table-hover text-center mt-3">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Fiche</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.nom|capitalize }}</td>
                <td>
                    <a href="{{ path('app_admin_marque_show', {'id': marque.id}) }}">
                        <i class="text-warning" data-feather="book-open"></i>
                    </a>
                </td>

                <td>

                    <a href="{{ path('app_admin_marque_edit', {'id': marque.id}) }}">
                        <i class="text-info" data-feather="edit"></i>
                    </a>
                </td>

                <td>

                    {{ include('admin_marque/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
