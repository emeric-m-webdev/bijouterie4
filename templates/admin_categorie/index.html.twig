{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}


{% block h1 %}Gestion des catégories{% endblock %}

{% block body %}

    {% for notification in app.flashes("success") %}
        <div class="col-md-6 mx-auto text-center alert alert-success">
            {{ notification }}
        </div>
    {% endfor %}

    <a class="btn btn-success" href="{{ path('app_admin_categorie_new') }}">Ajouter</a>  

    <table class="table table-striped table-hover text-center mt-3">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Fiche</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom|capitalize }}</td>

                    <td>
                        <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}">
                            <i class="text-warning" data-feather="book-open"></i>
                        </a>
                    </td>

                    <td>
                        <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">
                            <i class="text-info" data-feather="edit"></i>
                        </a>
                    </td>

                    <td>
                        {{ include('admin_categorie/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune catégorie</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
